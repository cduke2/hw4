<div class="container">
<div class="row">
<div class="col-md-3 col-sm-6">
  <% for post in @posts %>
      <h4>
        <% if post.user %>
          <%= post.user.email %>
        <% else %>
          anonymous
        <% end %>
      </h4>

      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post.image %>" class="img-fluid">
      <% end %>

      <p><%= post.body %></p>
    <% end %>
  </div>
</div>
</div>