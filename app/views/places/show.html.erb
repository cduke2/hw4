<h1><%= @place.name %></h1>

<% if @current_user %>
  <h2>My Posts</h2>
  <% for post in @place.posts.where({ user_id: @current_user.id }) %>
    <h3><%= post.title %></h3>
    <h4><%= post.posted_on %></h4>
    <p><%= post.description %></p>
  <% end %>

     <div class="row">
      <div class="col-sm-0">
        <a href="/posts/new/" class="btn btn-success">New Post</a>
      </div>
    </div>


      <div class="row">
      <div class="col-sm-0">
        <a href="/places" class="btn btn-success">Back to All Places</a>
      </div>
    </div>
<% end %>
