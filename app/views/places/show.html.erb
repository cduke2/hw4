<h1><%= @place.name %></h1>

<h2>My Posts</h2>

<% if @current_user %>
  <h3>My Posts 2</h3>

  <ul>
    <% for post in @place.posts.where({ user_id: session[:user_id] }) %>
      <li>
      <h3><%= post.title %></h3>
      <h4><%= post.posted_on %></h4>
      <p><%= post.description %></p>
      </li>
    <% end %>
  </ul>

  <% end %>

  <h4>New Sales Activity</h4>
<p>
  <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</p>
  
<p>
  <a href="/places">Back to All Places</a>
</p>

